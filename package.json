    "url": "https://github.com/diogo7b/clean-node-api/issues"
  },
  "homepage": "https://github.com/diogo7b/clean-node-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^2.2.2",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.5",
    "mongodb-memory-server": "^8.6.0",
    "standard": "^16.0.4"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.5.0"
  }
